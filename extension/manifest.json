{
  "name": "Read Me",
  "description": "An AI-powered reading companion that generates comprehension questions and provides feedback to help you better understand articles.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": ["https://blog.google/*"],
  "permissions": [
    "sidePanel",
    "alarms",
    "storage"
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://blog.google/*"],
      "js": ["scripts/annotation.js"]
    }
  ]
}
